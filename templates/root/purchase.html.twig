{% extends 'base.html.twig' %}

{% block title %}Product purchase{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card">
        <div class="card-header">
            Purchase
        </div>
        <div class="card-body">
            <dl>
                <dt>Country:</dt>
                <dd>{{ country.name }}</dd>

                <dt>Product:</dt>
                <dd>{{ product.name }}</dd>

                <dt>Price:</dt>
                <dd>{{ product.price }} EUR</dd>
                

                <dt>VAT:</dt>
                <dd>{{ vat.percent}}%</dd>

                <dt>Total price:</dt>
                <dd>{{ vat.getTotalPrice(product.price)  }} EUR</dd>
            </dl>
        </div>
</div>
{% endblock %}